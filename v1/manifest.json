{
  "name": "Notify!",
  "description": "A Google Chrome extension!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "/assets/icons/48.png",
    "128": "/assets/icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
    }
  },
  "permissions": [
    "notifications",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}